<!--- The default skin class for the Spark Button component.  

@see spark.components.Button

@langversion 3.0
@playerversion Flash 10
@playerversion AIR 1.5
@productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5">
	
	<!-- host component -->
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import spark.filters.DropShadowFilter;
		]]>
	</fx:Script>
	
	
	
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<s:BitmapImage includeIn="down" source="@Embed('/embed/ui_n/friendBtn3.png')"/>
	<s:BitmapImage includeIn="over" source="@Embed('/embed/ui_n/friendBtn2.png')"/>
	<s:BitmapImage includeIn="up" source="@Embed('/embed/ui_n/friendBtn1.png')"/>
	<s:BitmapImage includeIn="disabled" source="@Embed('/embed/ui_n/friendBtn4.png')"/>
	<!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay -->
	<s:Label id="labelDisplay"
			 textAlign="center"
			 verticalAlign="middle"
			 maxDisplayedLines="1" left.down="6" verticalCenter.down="0" horizontalCenter.down="1" trackingLeft="1" trackingRight="1"
			 horizontalCenter="0" verticalCenter="-1" filters="{[new spark.filters.DropShadowFilter(1,45,0,1,1.5,1.5,6,1)]}"
			 left="5" right="5" top="2" bottom="2">
	</s:Label>
</s:SparkSkin>
